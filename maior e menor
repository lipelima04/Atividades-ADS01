#include <stdio.h>

int main()
{
    int numero, maior=0, menor=0;
        printf("digite os valores: ");
        scanf("%d", &numero);
        maior=numero;
        menor=numero;
    while(numero!=0){
        if (numero>maior)maior=numero;
        if(numero<menor)menor=numero;
        
        else if(numero<0);
        
        printf("digite os valores: ");
        scanf("%d", &numero);
    }
        printf("O maior numero é:\n %d", maior);
        printf("\nO menor numero é:\n %d", menor);
}
